/* miniprogram/pages/article/detail/detail.wxss */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, .4);
}

.header-box{
  z-index: 2;
  height: 100%;
}

/* 情绪框 */
.mood-img{
  position: absolute;
  top: 15rpx;
  right: 20rpx;
  z-index: 1;
  width: 240rpx;
  height: 240rpx;
}

.content-box{
  padding-top: 740rpx;
  min-height: 100vh;
  position: relative;
  z-index: 1;
}

.bg-cover {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.bg {
  width: 100%;
  height: 500rpx;
  transition: all .3s;
}

.article-title {
  height: 200rpx;
}

.article-text{
  padding: 16rpx 32rpx;

}
